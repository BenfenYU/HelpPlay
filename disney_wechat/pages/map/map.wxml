
<!--地图容器-->
 <map
   id="myMap"
   style="width: 100%; height: 450px;"
   longitude="121.660764" latitude="31.143657"
   scale='15'
   polyline="{{polyline}}"
   bindtap='mark'
   show-location=True
   markers='{{markers}}'
 >
  <cover-view class="controls">
    <cover-view class="play" bindtap="next_view">
      <button
  type="primary"
  size="{{primarySize}}"
  loading="{{loading}}"
  plain="{{plain}}"
  disabled="{{disabled}}"
  bindtap="walk"
>
  规划下个景点
</button>
    </cover-view>
  </cover-view>
 </map>